{
  "manifest_version": 3,
  "name": "Redirect Freedium",
  "description": "Redirect Medium articles to Freedium for free access",
  "version": "1.0",
  "icons": {
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "48": "img/icon48.png",
      "128": "img/icon128.png"
    }
  },
  "permissions": ["declarativeNetRequest", "storage"],
  "host_permissions": [
    "*://medium.com/*",
    "*://www.medium.com/*",
    "https://freedium.cfd/*"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}
